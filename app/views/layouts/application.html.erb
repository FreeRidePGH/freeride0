<% page = controller.controller_name %>

<!DOCTYPE html>
<html>
<head>
  <title>Free Ride</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="wrapper">
	<div id="header">	
		<div id="personal_welcome">
			<% if current_user %>

			<a href="<%= logout_path %>">
				<li>Logout</li>
			</a>
			<a href="<%= user_path(current_user) %>">
				<li>
					<%= "Welcome, #{current_user.first_name}" %>
				</li>
			</a>
			<% else %>
			<a href="<%= root_path %>">
				<li>Please Login or Signup</li>
			</a>
			<%end%>
		</div>
		<h1 align="center"><%= link_to "Free Ride", root_path %></h1>
	</div>
	<div id="container">
		<div id="navigation">
			<ul>
				<li><%= link_to "Home", dashboard_path, :class => (page == "home" ? "selected" : "") %></li>
				<li><%= link_to "Bikes", bikes_path, :class => ((page == "bikes" || page=="search") ? "selected" : "") %></li>
				<li><%= link_to "Users", users_path, :class => (page == "users" ? "selected" : "") %></li>
				<li><%= link_to "EAB Projects", eab_projects_path, :class => (page == "eab_projects" ? "selected" : "") %></li>
				<li><%= link_to "Safety Inspections", safety_inspections_path, :class => (page == "safety_inspections" ? "selected" : "") %></li>
			</ul>
		</div>
		<div id="subnav">
			<ul>
				<%= render(partial: "layouts/subnav", object: page) %>
			</ul>
		</div>
		<div id="divider"></div>
		<div id="content">
			<%= yield %>
		</div>
	</div>
	<div id="footer">
		<p align="center">Copyright &copy; <%= Time.now.year %> 
			<%= link_to "Free Ride Pittsburgh", "http://freeridepgh.org" %>, 
			a project of <%= link_to "Bike Pittsburgh", "http://bikepgh.org/" %>.
		</p>
	</div>
</div>

</body>
</html>
