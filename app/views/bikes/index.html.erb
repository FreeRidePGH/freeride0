<h1>Listing bikes</h1>
<% if !@searchID.nil? %>
You searched for <%=@idtype%>: <b><%=@searchID%> </b><br/><br/>
<% end %>

<table>
  <tr>
		<th>ID</th>
    <th>Model</th>
    <th>Brand</th>
    <th>Location</th>
    <th>Wheel size</th>
    <th>Top tube</th>
    <th>Seat tube</th>
    <th>Color</th>
    <th>Date In</th>
    <th>Date Out</th>
    
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bikes.each do |bike| %>
<% @loc = Location.find_by_id(bike.location_id)%>
  <tr>
		<td><%= bike.id %></td>
    <td><%= bike.model_id %></td>
    <td><%= bike.brand_id %></td>
    <td><%if @loc.nil?%>
			N.A.
		<%else%>
			<%if @loc.hook_number.nil?%>
				<%=@loc.name%>
			<%else%>
				HookID - <%=@loc.hook_number%>
			<%end%>
		<%end%>			
	</td>
    <td><%= bike.wheel_size %></td>
    <td><%= bike.top_tube %></td>
    <td><%= bike.seat_tube %></td>
    <td><%= bike.color %></td>
    <td><%= bike.date_in %></td>
    <td><%= bike.date_out %></td>
    <td><%= link_to 'Show', bike %></td>
    <td><%= link_to 'Edit', edit_bike_path(bike) %></td>
    <td><%= link_to 'Destroy', bike, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Bike', new_bike_path %>
