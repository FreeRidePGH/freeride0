<h1>Listing bikes</h1>

<table>
  <tr>
	<th>Bike ID</th>
    <th>Model</th>
    <th>Brand</th>
    <th>Location</th>
    <th>Wheel size</th>
    <th>Top tube</th>
    <th>Seat tube</th>
    <th>Color</th>
    <th>Quality</th>
    <th>Condition</th>
    <th>Status</th>
    <th>Date In</th>
    <th>Date Out</th>
    
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bikes.each do |bike| %>
  <tr>
	<td><%= bike.bike_id %></td>
    <td><%= bike.model_id %></td>
    <td><%= bike.brand_id %></td>
    <td><%= bike.location_id %></td>
    <td><%= bike.wheel_size %></td>
    <td><%= bike.top_tube %></td>
    <td><%= bike.seat_tube %></td>
    <td><%= bike.color %></td>
    <td><%= bike.quality %></td>
    <td><%= bike.condition %></td>
    <td><%= bike.status %></td>
    <td><%= bike.date_in %></td>
    <td><%= bike.date_out %></td>
    <td><%= link_to 'Show', bike %></td>
    <td><%= link_to 'Edit', edit_bike_path(bike) %></td>
    <td><%= link_to 'Destroy', bike, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

