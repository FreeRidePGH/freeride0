
<h1 align="center">Search Bikes</h1>
<div name="searchFromDiv"align="center">
<form name="searchForm" action = "/bikes" method = "get">
<input type="text" size = "23" name="searchText" id="txtfld" placeholder="Bike ID or Hook Number"/>
<input type="submit" value="Go">
<br/>
<br/>

	<input type="radio" name = "idtype" value="bikeID" id="bikeID" checked="checked"><label for="bikeID">Bike ID</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
	<input type="radio" name = "idtype" value="hookID" id="hookID"/><label for="hookID">Hook ID</label><br/><br/>

<table id="criteria" border="4">
	<tr>
	<td>
		<table>
		<tr>
		<th>Brand</th>
		</tr>
		<% for i in BikeBrand.limit(6) %>
		<tr><td>
		<a href="/bikes?brand=<%=i.id%>">
		<%= i.name %>
		</td></tr>
		</a>
		<% end %>
		</table>	
	</td>
	<td>
		<table>
		<tr>
		<th>Color</th>
		</tr>	
		<% for i in Bike.select("distinct color").limit(6).map {|a| a.color}%>
		<tr><td><a href="/bikes?color=<%=i%>">
		<%=i%></a>
		</td></tr>
		<% end %>		
		</table>
	</td>	
	<td>
		<table>
		<tr>
		<th>Status</th>
		</tr>		
		<% for i in Bike.select("distinct status").limit(6).map {|a| a.status} %>
		<tr><td><a href="/bikes?status=<%=i%>">
		<%= i%></a>
		</td></tr>
		<% end %>		
		</table>
	</td>		
	</tr>
	<tr>
	<td>
		<table>
		<tr>
		<th>Wheel</th>
		</tr>
		<% for i in Bike.select("distinct wheel_size").limit(6).map {|a| a.wheel_size} %>
		<tr><td><a href="/bikes?wheel_size=<%=i%>">
		<%= i%></a>
		</td></tr>
		<% end %>		
		</table>
	
	
	</td>
	<td>
		<table>
		<tr>
		<th>Top Tube</th>
		</tr>
		<% for i in Bike.select("distinct top_tube").limit(6).map {|a| a.top_tube} %>
		<tr><td><a href="/bikes?top_tube=<%=i%>">
		<%= i%></a>
		</td></tr>
		<% end %>		
		</table>
	</td>	
	<td>
		<table>
		<tr>
		<th>Seat Tube</th>
		</tr>
		<% for i in Bike.select("distinct seat_tube").limit(6).map {|a| a.seat_tube} %>
		<tr><td><a href="/bikes?seat_tube=<%=i%>">
		<%= i%></a>
		</td></tr>
		<% end %>		
		</table>
	</td>		
	</tr>



</table>


</div>
</form>
