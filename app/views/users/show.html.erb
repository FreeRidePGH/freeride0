

<table><tr><td>

	<table cellpadding="5">
		<tr>
			<td colspan="2" align="left">
				<h1><%= @user.name %></h1>
				<h3><%= mail_to @user.email %></h3>
				<p><b>Phone Number</b><br />
					<%= number_to_phone(@user.phone_number, :area_code => true) %><br />
					<b>Text messages?</b><br />
					<%= @user.can_text_phone ? "Yes" : "No" %></p>
					<p><b>Address</b><br />
						<%= simple_format(@user.address, :class => 'address_display') %></p>
					</td>
				</tr>
				<tr>
					<td align="left" valign="top">
						<b>Has Read Packet &amp;<br/>Met Prerequisites?</b><br />
						<%= @user.has_read_packet ? "Yes" : "No" %>
					</td>

				</tr>
				<tr>
					<td colspan="2" align="left">
						<b>User Type</b><br />
						<%= @user.role_text %>
					</td>
				</tr>
			</table>
		</td>

<!--For making some space-->
<td width="50px"></td>
<td valign="top">
	<table>
	<tr>
		<td><div style="margin:20px 0 50px 0; font-weight:bold;">
		<%= link_to '[Edit Account Information]', edit_user_path(@user) %></div>
		</td>
	</tr>
	</table>
	<h2>Favorites List</h2>
	<%if @favs.empty?%>
	No favorites!
	<%else%>
	<table>
		<tr>
			<th>Bike</th>
			<th>Brand</th>
			<th>Model</th>
			<th>Color</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>

		<% @favs.each do |favorite| %>
		<tr>
			<% bike = favorite.bike %>
			<% loc = bike.location %>

			<td><%= link_to bike.bike_id, bike %></td>
			<td><%= bike.brand.name %></td>
			<td><%= bike.model.name %></td>
			<td><%= bike.color %></td>
			<td><%= link_to 'Remove', favorite, confirm: 'Are you sure?', method: :delete %></td>
			<td>&nbsp;&nbsp;&nbsp;</td>
			<td><%proj = bike.eab_project %>
				<% if !proj.nil? %>
				<% if proj.user_id==current_user.id %>
				<table id="favpage"><tr><td><%= link_to "Current Project", proj %></td></tr></table>
				<%else%>
				<i>Project claimed by <%= proj.user.name %></i>
				<%end%>
				<%end%>

			</td>
		</tr>
		<% end %>
	</table>
	<%end%>
</td>
</tr>
<tr>
	<td colspan="3">
	<br/>
	<h2 align="center" style="margin-bottom: 5px;">All Transactions</h2>
	<%= render 'transactions/transaction_table' %>
	</td>
</tr>

</table>