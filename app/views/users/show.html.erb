

<table><tr><td>

<table cellpadding="5">
	<tr>
		<td colspan="2" align="left">
			<h1><%= @user.name %></h1>
			<h3><%= mail_to @user.email %></h3>
			<p><b>Phone Number</b><br />
			<%= number_to_phone(@user.phone_number, :area_code => true) %><br />
			<b>Text messages?</b><br />
			<%= @user.can_text_phone ? "Yes" : "No" %></p>
			<p><b>Address</b><br />
			<%= simple_format(@user.address, :class => 'address_display') %></p>
		</td>
	</tr>
	<tr>
		<td align="left" valign="top">
			<b>Has Read Packet</b><br />
			<%= @user.has_read_packet ? "Yes" : "No" %>
		</td>

	</tr>
	<tr>
		<td colspan="2" align="left">
			<b>User Type</b><br />
			<%= @user.role_text %>
		</td>
	</tr>
	<tr>
		<td colspan="2" align="left">
			<%= link_to 'Edit Information', edit_user_path(@user) %>
		</td>
	</tr>
</table>
</td>

<!--For making some space-->
<td width="50px"></td>

<td>
<h2>Favorites list</h2>
<%if @favs.empty?%>
There no favorite bikes.
<%else%>
<table>
  <tr>
    <th>Bike</th>
	<th>Brand</th>
    <th>Model</th>
	<th>Color</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @favs.each do |favorite| %>
  <tr>
  <% @bike = Bike.find_by_id(favorite.bike_id)%>
  
    <td><%= @bike.bike_id %></td>
    <td><%= BikeBrand.find(@bike.brand_id).name %></td>
    <td><%= BikeModel.find(@bike.model_id).name %></td>
    <td><%= @bike.color %></td>
    <td><%= link_to 'Remove', favorite, confirm: 'Are you sure?', method: :delete %></td>
	<td>&nbsp;&nbsp;&nbsp;</td>
	<td><%@proj = EabProject.find_by_bike_id(@bike.id)%>
	<% if !@proj.nil?%>
		<% if @proj.user_id==@user.id%>
			<table id="favpage"><tr><td>Current Project</td></tr></table>
		<%else%>
			<i>Project claimed by <%=User.find_by_id(@proj.user_id).name%></i>
		<%end%>
	<%end%>
	
	</td>
  </tr>
<% end %>
</table>
<%end%>

</td>

</tr>
<tr>
	<table>
		<tr><td>	
			<h2 align="center">Transactions</h2>
		</td></tr>
		<tr><td>
			<h3 align="center" style="margin:0;">Account Value: <%= number_to_currency(@user.account_value) %></h3>
		</td></tr>
		</table>
		<table id="transactions">
		<tr class="t_header">
			<td align="center">Date</th>
			<td align="center">Credit</th>
			<td align="center">Debit</th>
			<td algin="center">Balance</th>
		</tr>
		<% if @transactions.empty? %>
		<tr><td colspan="4" align="center">No transactions!</td></tr>
		<% else %>
			<% bal = @user.account_value %>
			<% @transactions.each do |transaction| %>
			<tr>
				<td><%= transaction.created_at_format %></td>
				<% if transaction.amount >= 0 %>
				<td class="credit_cell" align="right"><%= number_to_currency(transaction.amount) %></td>
				<td></td>
				<% else %>
				<td></td>
				<td class="debit_cell" align="right"><%= number_to_currency(transaction.amount.abs) %></td>
				<% end %>
				<td align="right"><%= number_to_currency(bal) %></td>
				<% bal = bal - transaction.amount %>
			</tr>
			<% end %>
		<% end %>
	</table>
</tr>

</table>